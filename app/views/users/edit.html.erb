<% provide(:title, 'Edit Profile')%>
<div class="row">
	<div class="span12">
		<h1>Update your profile</h1>
		<%= render "shared/error", error: @user  %>
		<%= form_for @user, html: { multipart: true } do |f| %>
		<div class="row">
			<div class="span4 offset2">
				<%= f.label :photo, "Profile Photo" %>
				<div class="profile_img"><%= image_tag @user.photo.url(:small), size: "120x120" %></div>
				<br/>
				<%= f.file_field :photo %>
			</div>

			<div class="span4">
				<%= f.label :name %>
				<%= f.text_field :name %>
				
				<%= f.label :email %>
				<%= f.text_field :email %>
				
				<%= f.label :password %>
				<%= f.password_field :password %>
				
				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation %><br/><br/>
				<%= f.submit "Save changes", class: "btn btn-medium btn-primary" %>
			</div>
		</div>
		<% end %>
	</div>
</div>
